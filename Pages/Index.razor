@page "/"

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div class="absolute inset-0 bg-gradient-to-r from-teal-400 to-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <div class="max-w-md mx-auto">
                <div class="flex items-center space-x-5">
                    <img class="h-12 w-12" src="/img/logo.svg" alt="Jamdr Logo" />
                    <div>
                        <h1 class="font-bold text-3xl text-gray-900">Welcome to Jamdr</h1>
                        <p class="text-xl font-medium text-gray-600">Find your perfect Jam Buddies</p>
                    </div>
                </div>
                <div class="divide-y divide-gray-200">
                    <p class="mt-6 text-2xl font-medium text-gray-900">The ultimate platform to connect musicians and jam enthusiasts.</p>
                    <div class="mt-8 flex flex-col">
                        <label for="email" class="font-medium text-gray-900">Stay updated</label>
                        <input id="email" type="email" class="mt-2 p-3 h-12 rounded-md border-2 border-gray-200 focus:border-blue-500 focus:outline-none" placeholder="Your email address" />
                        <button class="mt-4 px-5 py-3 self-end text-base font-medium rounded-md text-white bg-gradient-to-r from-teal-400 to-blue-500 hover:from-blue-500">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
